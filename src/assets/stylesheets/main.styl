html, body
  overflow-x hidden

graph
  overflow hidden

div.tooltip
  position absolute
  text-align center
  // width 60px
  // height 28px
  padding 4px
  font 12px sans-serif
  background lightsteelblue
  border 0px
  border-radius 3px
  pointer-events none
  line-height 18px

.site-content-toolbar
  background #f6f6f6 !important
  color rgba(0,0,0,0.87) !important

.md-errors-spacer
  display none

md-sidenav
  transition all 0.4s ease
  > md-content.layout-padding > *
    padding 0

md-input-container
  margin-top 10px
  margin-bottom 10px

md-autocomplete[md-floating-label] md-input-container
  padding-bottom 2px

md-autocomplete[md-floating-label] md-progress-linear
  display none

a
  color: #106CC8;
  text-decoration: none;
  font-weight: 400;
  border-bottom: 1px solid rgba(64, 84, 178, 0.25);
  transition: border-bottom 0.35s;

a:hover, a:focus
  border-bottom: 1px solid #4054B2;

ul
  margin 0
  padding 0
  li
    margin-left 16px
    padding 0
    margin-top 3px
    list-style-position inside

  li:first-child
    margin-top 0

textarea
  margin-top 12px
  margin-bottom 12px
  width 100%
  height 200px

  font-family: Menlo, Monaco, Consolas, "Courier New", monospace
  font-size: 15px
  padding 3px

  white-space: pre;
  word-wrap: normal;
  overflow-x: scroll;

.autocomplete-header-template
  li
    border-bottom 1px solid #ddd
    height auto
    padding 4px 8px
    white-space normal

  li:last-child
    border-bottom-width 0

  .item-label, .item-description
    display block
    line-height 1.5
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

  .item-description
    font-size smaller

md-toolbar md-autocomplete input
  padding 0 0 0 8px !important

.main-content
  width auto
  max-width 680px
  margin-left auto
  margin-right auto


md-progress-linear
  position absolute
  transition: opacity  0.1s linear

  .md-container
    height: 2px


.footer
  font-size: small;

line
  stroke #000
  stroke-width 1.5px

circle
  fill #ccc
  stroke #333
  stroke-width 1.5px

text
  font 10px sans-serif
  text-shadow 0 1px 0 #fff, 1px 0 0 #fff, 0 -1px 0 #fff, -1px 0 0 #fff
  cursor pointer
  user-select none

.active
  fill #6BB9F0

.parented
  fill #EBC6AD
